<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Craite" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lime_green</item>
        <item name="postSplashScreenTheme">@style/Theme.Craite</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/craite_icon</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

    </style>
</resources>